@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <h1>B.O.B.</h1>
        <h2>Basic Order Book</h2>
        <a id="AnchorGetOrders">Get Orders</a>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $("#AnchorGetOrders").click(function () {
                $.getJSON(getWebServiceUri('orders'), {}, function (data) {
                    console.log(data);
                });
            });
        });

        function getWebServiceUri(path) {
            return 'http://' + window.location.hostname + ':5000/api/' + path;
        }
    </script>

}